{
  "name": "orez",
  "version": "0.0.45",
  "description": "PGlite-powered zero-sync development backend. No Docker required.",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./s3": {
      "types": "./dist/s3-local.d.ts",
      "import": "./dist/s3-local.js"
    },
    "./vite": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js"
    }
  },
  "bin": {
    "orez": "./dist/cli-entry.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --exclude src/integration/",
    "test:integration": "vitest run src/integration/",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint --import-plugin --ignore-pattern sqlite-wasm/",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "check": "tsc --noEmit",
    "demo:test": "bun demo/src/test/run-e2e.ts",
    "check:all": "bun run lint && bun run format:check && bun run check && bun run test",
    "release": "bun scripts/release.ts"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@electric-sql/pglite-tools": "0.2.4",
    "@rocicorp/zero": ">=0.1.0",
    "bedrock-sqlite": "workspace:*",
    "citty": "^0.2.0",
    "postgres": "^3.4.5",
    "pgsql-parser": "^17.9.11"
  },
  "peerDependencies": {
    "vite": ">=5"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "oxfmt": "latest",
    "oxlint": "latest",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "ws": "^8.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/natew/orez"
  },
  "workspaces": [
    "sqlite-wasm"
  ],
  "keywords": [
    "zero",
    "pglite",
    "postgres",
    "replication",
    "sync",
    "zero-cache",
    "development"
  ]
}
